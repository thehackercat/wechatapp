@import "../../pages/common";

.company-handle {
    padding: 10px 20px;
    display: flex;
}

.company-handle.fixed {
  position: fixed;
  width: 100%;
  box-sizing: border-box;
  bottom: 20px;
}

.company-handle.fixed button {
  background: #85c1cc;
  border-radius: 20px;
  color: #fff;
  border: none;
  box-shadow: 0 2px 10px #85c1cc;
}
  
.company-handle button {
    flex: 1;
}
  
.company-handle button {
    margin-right: 20px;
}

.company-handle button:last-child {
  margin-right: 0;
}