.expand-icon {
  border-top: 8.65px solid currentColor;
  opacity: .5;
  border-left: 5px solid transparent;
  border-right: 5px solid transparent;
  display: inline-block;
  margin-left: 7px;
  transition: opacity .1s ease-in-out, border .2s ease-in-out, transform .3s ease-in-out;
}

.expand-icon.active {
  border-top-color: #85c1cc;
  opacity: 1;
}

.expand-icon.expanded {
  transform: rotate(60deg) translateY(35%);   
}