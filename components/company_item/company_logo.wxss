.company-logo-view::after {
    opacity: 0;
    transition: 300ms all ease-in-out;
    content: "";
    width: 40px;
    height: 40px;
    background-color: rgba(255, 255, 255, 0.16);
    background-image: url(http://puui.qpic.cn/tv/0/23193918/0);
    background-size: 50%;
    background-position: center;
    background-repeat: no-repeat;
    left: 20px;
    bottom: 0;
    border-radius: 50%;
    position: absolute;
}

.company-item.chosen .company-logo-view::after {
    opacity: 1;
}

.company-item.chosen .company-logo {
    border-color: #85c1cc;
    opacity: .6;
}

.company-logo-view {
    width: 40px;
    height: 40px;
    padding: 0 20px 0 20px;
    position: relative;
}

.company-logo {
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    border-radius: 50%;
    box-shadow: 0 2px 10px 0 rgba(0, 0, 0, 0.16);
    transition: 300ms all ease-in-out;
    border: 2px solid transparent;
}